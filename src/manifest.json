{
  "manifest_version": 3,
  "name": "z2blog",
  "version": "0.1",
  "description": "中二Devil的个人博客",
  "icons": {
    "16": "static/icons/icon16x16.png",
    "32": "static/icons/icon32x32.png",
    "48": "static/icons/icon48x48.png",
    "128": "static/icons/icon128x128.png"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": {
      "16": "static/icons/icon16x16.png",
      "32": "static/icons/icon32x32.png",
      "48": "static/icons/icon48x48.png",
      "128": "static/icons/icon128x128.png"
    },
    "default_title": "中二Devil的个人博客",
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "write_note": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "弹出写笔记窗口"
    },
    "ask_chatgpt": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "询问chatGPT"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/app.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/app.css", "static/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
